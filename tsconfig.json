{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "jsx": "react",
    "pretty": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "removeComments": true,
    "emitDeclarationOnly": true,
    "resolveJsonModule": true,
    "noImplicitThis": false
  },
  "paths": {
    "@react-three/core": ["./packages/core/src"],
    "@react-three/core/*": ["./packages/core/src/*"]
  },
  "include": ["apps", "packages"],
  "exclude": ["node_modules"]
}
